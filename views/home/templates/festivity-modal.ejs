    }

    /* Add Animation - Zoom in the Modal */
    .modal { 
        animation-name: zoom;
        animation-duration: 0.6s;
    }

    .close-modal {
        position: relative;
        right: 10px !important;
        color: #f1f1f1;
        font-size: 40px;
        font-weight: bold;
        transition: 0.3s;
    }


    @media(max-width:767px){
      .modal-small {
        padding-top: 50px !important;
      
      }
    }

    @keyframes zoom {
        from {transform:scale(0)} 
        to {transform:scale(1)}
    }
</style>

