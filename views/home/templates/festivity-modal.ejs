<style type="text/css">
    #festivityCarousel {
      margin: 20px auto;
    }
    #festivityCarousel .carousel-indicators {
      margin: 10px 0 0;
      overflow: auto;
      position: static;
      text-align: left;
      white-space: nowrap;
      width: 100%;
    }
    #festivityCarousel .carousel-indicators li {
      background-color: transparent;
      -webkit-border-radius: 0;
      border-radius: 0;
      display: inline-block;
      height: auto;
      margin: 1 !important;
      width: auto;
    }
    #festivityCarousel .carousel-indicators li > img {
      display: block;
      max-height: 30px;
      height: 30px;
      overflow-y: hidden !important;
      margin: 2px;
      opacity: 0.6;
    }

    #festivityCarousel .carousel-indicators li > img:hover {
      opacity: 0.9;
      cursor: pointer;
    }
    #festivityCarousel .carousel-outer {
