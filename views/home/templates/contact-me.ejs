<section id="section-contactus" class="section section-inverse py-50" style="background-image: url(public/images/Gallery3.jpg);" data-overlay="8"  data-aos="fade-up" data-aos-duration="700">
    <div class="container p-0">
        <div class="row">
            <div class="col-md-12">
                <div class="text-center">
                    <h2 style="color:white !important;">SEND ME A MAIL</h2><hr class="w-50 hidden-sm-down">
                    <h4 style="color:white !important;"><b>Get in touch via contact form or email me directly</b></h4>
                    <p>I will get back to you as soon as possible</p>
                    <hr>
                </div>  
                
                <div class="row">
                    <div class="col-md-4 col-sm-4 text-center" >
                        <div>
                            <h3 style="color:white !important;"><strong>Where To Meet?</strong> </h3>
                        </div>
                        <!-- Personal Info -->
                        <div style="color:white !important;">
                            <p>Lucban Quezon</p>
                            <p>Quezon Philippines</p>
                        </div>
                        <hr>
                        <div>
                            <h3 style="color:white !important;"><strong>Say Hello</strong> </h3>
                        </div>
                        <!-- Personal Info -->
                        <div style="color:white !important;">
                            <p><strong>Email: </strong> s.franzesch9@gmail.com</p>
                            <p><strong>Phone: </strong>+639-19-589-5787</p>
                        </div>
                        <hr>

                        <div>
                            <p><a href='#' class="text-white">Google Maps <span class="glyphicon glyphicon-arrow-right"></span></a></p>
                            <img src="/public/images/Google-Maps-icon.png" width="100" />
                        </div>
                        <hr>
                    </div>
                    <div class="col-md-7 col-sm-8 text-white" >
                        <form class="form-horizontal" action='/' method='post'>
                            <fieldset>
                                <div class="form-group">
                                  <label for="inputSubject" class="col-md-2 control-label">Subject:</label>
                                  <div class="col-md-12">
                                    <input type="text" class="form-control" id="inputSubject" name='subject' placeholder="Subject" required>
                                  </div>
                                </div>
                                <hr>
                                <div class="form-group">
                                  <label for="name" class="col-md-2 control-label">Full Name:</label>
                                  <div class="col-md-12">
                                    <input type="text" class="form-control" id="name" name='name' placeholder="From" required>
                                  </div>
                                </div>
                                <div class="form-group">
                                  <label for="email" class="col-md-2 control-label">Email:</label>
                                  <div class="col-md-12">
                                    <input type="text" class="form-control" id="email" name='email' placeholder="Email" required>
                                  </div>
                                </div>
                                <div class="form-group">
                                  <label for="message" class="col-md-2 control-label">Message:</label>
                                  <div class="col-md-12">
                                    <textarea class="form-control" rows="3" id="message" name='message' required></textarea>
                                  </div>
                                </div>
                                <hr>
                                <div class="form-group">
                                  <div class="col-md-12 text-right hidden-sm-down">
                                    <button class="px-50 py-10 btn btn-default text-gray-dark hvr-bounce-to-bottom" type="reset">Reset</button>
                                    <button class="px-50 py-10 btn btn-default text-gray-dark hvr-bounce-to-bottom" type="submit">Submit <span class="fa fa-arrow-right"></span></button>
                                  </div>
                                  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                  <div class="col-md-12 text-center hidden-sm-up">
                                    <button class="px-50 py-10 btn btn-block btn-default text-gray-dark hvr-bounce-to-bottom" type="reset">Reset</button>
                                    <button class="px-50 py-10 btn btn-block btn-default text-gray-dark hvr-bounce-to-bottom" type="submit" >Submit <span class="fa fa-arrow-right"></span></button>
                                  </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>  
        </div>
    </div>
</section>

